<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>
        Form
    </title>
  </head>
  <body>
      <form method="post" action="/portal" class="m-2 p-3 border rounded border-dark">
        <center><h2>Portal Form</h2></center>
    <div class="mb-3">
        <label  class="form-label">Domain Name : </label>
        <br>
        <select class="p-2 rounded"name="domainName">
          <option>Engineering</option>
          <option>Computer Science & It</option>
          <option>Medical Science</option>
          <option>Business</option>
          <option>Management</option>
          <option>Others</option>
        </select>
      </div>
      <div class="mb-3">
        <label  class="form-label">Domain Description : </label>
        <textarea class="form-control" placeholder="Domain Description" rows="3" name="desc" autocomplete="off"></textarea>
      </div>
      <div class="mb-3">
        <label  class="form-label">
            Sub Domain : 
        </label>
        
        <input type="text" class="form-control" placeholder="Sub Domain" name="subDomains[name]" autocomplete="off">
      </div>
      <div class="mb-3">
        <label  class="form-label">Description : </label>
        <textarea class="form-control" placeholder="SubDomain Description" rows="3" name="subDomains[description]" autocomplete="off"></textarea>
      </div>
      <div class="mb-3">
        <label  class="form-label">Image Url : </label>
        <input type="text" class="form-control" name="subDomains[imageUrl]" placeholder="SubDomain Image Url" autocomplete="off">
      </div>
      <div class="mb-3">
          <button class="btn btn-outline-primary" >Submit</button>
        <a href="/portal/data" class="btn btn-outline-dark color-dark">Refer Data</a>
      </div>
    </form>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

